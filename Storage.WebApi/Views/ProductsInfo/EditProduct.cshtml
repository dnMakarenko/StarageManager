
@{
    ViewBag.Title = "Edit Product";
}

<h2>Edit Product</h2>

<table>
    <tr>
        <td>Name</td>
        <td><input type="text" ng-model="Product.Name" />  </td>
    </tr>
    <tr>
        <td>Description</td>
        <td><input type="text" ng-model="Product.Description" />  </td>
    </tr>
    <tr>
        <td>Price</td>
        <td><input type="text" ng-model="Product.Price" />  </td>
    </tr>
    <tr>
        <td>Quantity</td>
        <td><input type="text" ng-model="Product.Quantity" />  </td>
    </tr>
</table>
<input type="button" value="Save" ng-click="save()" />
<div>{{error}}</div>